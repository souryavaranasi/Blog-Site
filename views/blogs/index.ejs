<% include ../partials/header %>

<div class="ui main text container">
    <div class"ui huge header" ><h1>Welcome to Blog Site</h1></div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){%>
            <div class="item">
                <div class="image"> 
                     <img src=" <%=blog.image%>" width="200px">
                </div>
                <div class="content">
                    <a class="header" href="/blogs/<%=blog._id%>"><%=blog.title%> </a>
                     <div class="meta">
                    <span><%=blog.created.toDateString()%></span> 
                    </div>
                    <div class="description">
                    <p> <%- blog.body.substr(100)%> ...</p>
                </div>
                <div class="extra">
                    <a class="ui floated basic violet button mini" href="/blogs/<%= blog._id %>">Read More
                    <i class="right chevron icon"></i></a>
                </div>
               </div>
               
                
             
            
            </div>
            
            <% }) %>  
       </div>
       
    </div>
</div>




<% include ../partials/footer %>